        db.Index('idx_term_search', 'term'),
        db.Index('idx_definition_search', 'definition'),
        db.Index('idx_difficulty', 'difficulty'),
        db.Index('idx_category', 'category_id'),
        db.Index('idx_featured', 'is_featured'),
        db.Index('idx_active', 'is_active'),
    )
    
